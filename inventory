#Inventory file must contain groups to master and slave.
#Example below

postgres2 ansible_ssh_host=127.0.0.1 ansible_ssh_port=2200 ansible_ssh_user='ansible' ansible_ssh_private_key_file='keys/id_rsa'
postgres1 ansible_ssh_host=127.0.0.1 ansible_ssh_port=2222 ansible_ssh_user='ansible' ansible_ssh_private_key_file='keys/id_rsa'

[streaming-master]
postgres1

[streaming-slaves]
postgres2
